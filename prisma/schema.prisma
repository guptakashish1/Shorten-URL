// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Link {
  id          String   @id @default(cuid())
  code        String   @unique
  targetUrl   String
  clicks      Int      @default(0)
  lastClicked DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("links")
}